# 25-credentials.rules â€” credential stores and sudoers
-w /etc/passwd      -p wa -k creds_modify
-w /etc/shadow      -p wa -k creds_modify
-w /etc/group       -p wa -k creds_modify
-w /etc/gshadow     -p wa -k creds_modify
-w /etc/sudoers     -p wa -k creds_modify
-w /etc/sudoers.d   -p wa -k creds_modify

-w /etc/ssh/sshd_config -p wa -k ssh_config
-w /root/.ssh/authorized_keys -p wa -k root_ssh_keys

# Authorized keys changes under /home
-a always,exit -F arch=b64 -F dir=/home -F perm=wa -k user_ssh_keys
-a always,exit -F arch=b32 -F dir=/home -F perm=wa -k user_ssh_keys
